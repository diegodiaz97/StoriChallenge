<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Edit Text -->
    <style name="input_field_style">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textColorHighlight">@color/enabled_blue</item>
        <item name="android:drawablePadding">@dimen/common_input_drawable_padding</item>
    </style>

    <!-- Email Edit Text -->
    <style name="email_input_field_style" parent="input_field_style">
        <item name="android:hint">@string/email_text</item>
        <item name="android:drawableStart">@drawable/ic_email</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <!-- Password Edit Text -->
    <style name="password_input_field_style" parent="input_field_style">
        <item name="android:maxLength">16</item>
        <item name="android:hint">@string/password_text</item>
        <item name="android:drawableStart">@drawable/ic_password</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <!-- Input Layout -->
    <style name="input_layout_style">
        <item name="android:textColorHint">@color/gray</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@null</item>
        <item name="errorTextAppearance">@style/input_error_style</item>
        <item name="boxStrokeWidth">@dimen/common_input_stroke</item>
        <item name="boxStrokeWidthFocused">@dimen/common_input_focused_stroke</item>
        <item name="boxStrokeColor">@color/enabled_blue</item>
        <item name="boxStrokeErrorColor">@color/red_error</item>
        <item name="boxCornerRadiusTopStart">@dimen/common_button_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/common_button_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/common_button_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/common_button_radius</item>
    </style>

    <!-- Password Input Layout -->
    <style name="password_input_layout_style" parent="input_layout_style">
        <item name="passwordToggleDrawable">@drawable/ic_selector</item>
        <item name="passwordToggleEnabled">false</item>
    </style>

    <!-- Input Error -->
    <style name="input_error_style">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="errorTextColor">@color/red_error</item>
    </style>

    <!-- Big size Text -->
    <style name="big_size_text_style">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/big_text_size</item>
    </style>

    <!-- Medium size Text -->
    <style name="medium_size_text_style">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <!-- Small size Text -->
    <style name="small_size_text_style">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <!-- Full Button -->
    <style name="full_button_style">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:backgroundTint">@drawable/bg_full_button_blue</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/common_button_text_size</item>
        <item name="android:padding">@dimen/common_button_padding</item>
        <item name="cornerRadius">@dimen/common_button_radius</item>
    </style>
</resources>
